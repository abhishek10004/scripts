; -- use nrfiles and rw to CLI args to control readtype and number of files --
[global]
ioengine=sync
direct=1
fadvise_hint=0
iodepth=64
invalidate=1
nrfiles=1
thread=1
openfiles=1
group_reporting=1
create_serialize=0
allrandrepeat=0
time_based
runtime=20m
file_service_type=random
numjobs=${NUMJOBS}
filename=${DIR}/Workload.0/0

[Workload]
bs=${BLOCK_SIZE}
filesize=${FILE_SIZE}
rw=randread
